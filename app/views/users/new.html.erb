<div class= "row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <%= image_tag "gryffindor.png", class: "image-full"%>
  </div>
</div>
<br>
<br>
<div class="col-md-4 col-md-offset-4">
  <div class = "col-md-12">
    <%= form_for @user do |f|%>
      <div class="form-group text-center">
        <%= f.label :username %><br>
        <%= f.text_field :username %>
      </div>
      <div class="form-group text-center">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>
      <br>
      <div class="form-submission-center">
        <%= f.submit "Create account", class: "btn btn-default text-color-green"%>
      </div>
    <% end %>
  </div>
</div>
