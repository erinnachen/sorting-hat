<h1><%= @user.username %></h1>
<%= link_to "Create points for #{@user.username}", new_user_point_path(@user.id) %>
<ul id="points">
  <% @points.each do |point| %>
    <li><%= point.value %> - <%= link_to "Delete #{point.value} points", user_point_path(@user, point), method: "delete" %></li>
  <% end %>
</ul>
